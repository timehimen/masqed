<%- include('../templates/head') -%>

<div class="page-body cart">
    <h1 align="center">Your cart</h1>

    <div style="margin-top: 3em">
        <table width="100%" cellpadding="3">
            <thead>
            <tr>
                <th>Product</th>
                <th>Price</th>
                <th>QTY</th>
                <th>Total</th>
            </tr>
            </thead>
            <tbody>
                <% let totalCost = 0; %>
                <% cart.forEach(item => {  totalCost+= parseFloat(item.price) %>
                    <tr>
                        <td style="display: flex">
                            <img src="/products/<%= item.imageFile%>" style="width: 100px">
                            <div style="margin-left: 2em; position: relative">
                                <div style="font-weight: 500"><%= item.productName %></div>
                                <div class="margin-top-1">Free Delivery</div>
                                <div style="position: absolute; bottom: 0; left: 0; right: 0;"><a href="/remove-from-cart/<%= item._id %>">Remove</a> </div>
                            </div>
                        </td>
                        <td>
                            R<%= item.price %>
                        </td>
                        <td>
                            <input type="text" value="1">
                        </td>
                        <td>
                            R<%= item.price %>
                        </td>
                    </tr>
                <% })%>
                <tr style="font-weight: 500; font-size: 20px;">
                    <td colspan="3">TOTAL</td>
                    <td>R<%= totalCost %></td>
                </tr>
            </tbody>
        </table>
    </div>
    <div style="margin:3em 0; display: flex; align-items: center; justify-content: space-between">
        <a href="/products" style="color: black">Continue shopping</a>
        <a href="#" class="buy-btn">Proceed to checkout</a>
    </div>
</div>

<%- include('../templates/foot') -%>